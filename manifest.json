{
  "manifest_version": 2,
  "name": "Toggle Design Mode",
  "version": "0.0.1",
  "background": {
    "scripts": ["src/event.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"]
    }
  ],
  "permissions": ["activeTab", "contextMenus"]
}
