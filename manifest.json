{
  "manifest_version": 2,
  "name": "Toggle Design Mode",
  "version": "0.0.1",
  "description": "Toggle document.designMode",
  "icons": {
    "16": "icons/edit-button.png",
    "48": "icons/edit-button.png",
    "128": "icons/edit-button.png"
  },
  "background": {
    "scripts": ["src/event.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"]
    }
  ],
  "permissions": ["activeTab", "contextMenus"]
}
